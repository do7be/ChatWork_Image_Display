{
  "manifest_version": 2,
  "name": "ChatWork Image Display",
  "version": "0.4",
  "description": "Add image on ChatWork from image URL",
  "content_scripts": [
    {
      "matches": [
        "https://www.chatwork.com/*",
        "https://kcw.kddi.ne.jp/*"
      ],
      "css": ["style.css"],
      "js": ["loader.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "https://*/*"
  ],
  "web_accessible_resources":[
    "addImage.js"
  ]
}
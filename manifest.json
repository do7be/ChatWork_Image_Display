{
  "manifest_version": 2,
  "name": "ChatWork Image Display",
  "version": "0.1",
  "description": "Add image on ChatWork from image URL",
  "content_scripts": [
    {
      "matches": [
        "https://www.chatwork.com/*",
        "https://kcw.kddi.ne.jp/*"
      ],
      "include_globs": [
        "https://www.chatwork.com/#!rid*",
        "https://kcw.kddi.ne.jp/#!rid*"
      ],
      "css": ["style.css"],
      "js": ["loader.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "https://*/*"
  ],
  "web_accessible_resources":[
    "addImage.js"
  ],
  "icons" : {
    "128": "icon.png"
  }
}